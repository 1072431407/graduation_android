<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@drawable/mine_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Mine_head_background_height">
                <Button
                    android:id="@+id/save"
                    android:text="保存"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:background="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp" />
                <ImageView
                    android:id="@+id/headImage"
                    android:background="@drawable/head_image"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:id="@+id/nickName"
                    android:lines="1"
                    android:hint="未登录"
                    android:layout_marginTop="5dp"
                    android:maxLength="9"
                    android:ellipsize="end"
                    android:layout_below="@+id/headImage"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/signature"
                    android:hint="设置您的个性签名吧！"
                    android:lines="1"
                    android:layout_marginTop="5dp"
                    android:maxLength="18"
                    android:layout_below="@+id/nickName"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/signature"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="报名天数:"/>
                    <TextView
                        android:id="@+id/totalDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textSize="13dp"
                        android:text="天"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textSize="13dp"
                        android:text="总练习时长:"/>
                    <TextView
                        android:id="@+id/totalHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:layout_marginLeft="3dp"
                        android:text="时"/>
                    <TextView
                        android:id="@+id/totalMinute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="分"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="理论:"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="24dp"
                    android:textSize="@dimen/size_00_18"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/size_00_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/switchButton"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/switch_i"
                    android:layout_marginRight="24dp"
                    android:scaleType="fitXY"
                    android:layout_width="24dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/numQuestions"
                        android:text="0"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="18dp"
                        android:gravity="center"
                        android:textSize="@dimen/size_00_22"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="累计答题数目"
                        android:layout_marginLeft="18dp"
                        android:gravity="center"
                        android:textSize="@dimen/size_00_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/accuracy"
                        android:text="正确率:0%"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="18dp"
                        android:gravity="center"
                        android:textSize="@dimen/size_00_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/averScore"
                        android:text="0"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="18dp"
                        android:gravity="center"
                        android:textSize="@dimen/size_00_22"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="模拟考试平均分"
                        android:layout_marginLeft="18dp"
                        android:gravity="center"
                        android:textSize="@dimen/size_00_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/degree"
                        android:text="累计考试次数:0次"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="18dp"
                        android:gravity="center"
                        android:textSize="@dimen/size_00_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:text="档案:"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="24dp"
                android:textSize="@dimen/size_00_18"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.example.myapplication.views.MaxHeightListView
                android:id="@+id/listView"
                android:divider="@null"
                android:dividerHeight="3dp"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:paddingLeft="18dp"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>